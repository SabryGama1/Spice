@model IEnumerable<SubCategory>
@{
    ViewData["Title"] = "Index";
}

<div class="whiteBackground">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Sub Category List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPatial" />
        </div>
    </div>

    <div>
        @if (Model.Count() == 0)
        {
            <p class="text-danger">No Sub Category...</p>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table table-secondary">
                    <th>@Html.DisplayNameFor(e => e.Name)</th>
                    <th>@Html.DisplayNameFor(e => e.Category.Name)</th>
                    <th></th>
                </tr>
            
                @foreach (var item in Model)
                {
            <tr>
                <td>@Html.DisplayFor(e => item.Name)</td>
                <td>@Html.DisplayFor(e => item.Category.Name)</td>
                <td style="width:150px">
                    <partial name="OperationButtonPartial" model="item.Id" />
                </td>
            </tr>
                }
            </table>
        }
    </div>
</div>

