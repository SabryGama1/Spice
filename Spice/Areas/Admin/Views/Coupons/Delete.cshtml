@model Coupon
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete Coupon</h2>
<br />
<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="whiteBackground border">
        @if (Model.Picture != null)
        {
            <img style="width:100%;height:100%; border-radius: 5px" src="@("data:image/jpeg;base64,"+Convert.ToBase64String(Model.Picture))" />
            <br />
            <br />
        }
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Picture" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CouponType" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select class="form-control" asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()"></select>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-label" ></label>
            </div>
            <div class="col-5">
                <input asp-for="Discount" class="form-control" readonly/>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MinimumAmount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="MinimumAmount" readonly class="form-control" />
            </div>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsActive" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="IsActive" type="checkbox" disabled class="form-control" />
            </div>
        </div>

        <div class="form-group row ">
            <div class="col-5 offset-2">
                <partial name="_DeleteandBackToListPatial" />
            </div>

        </div>
    </div>
</form>


